{
  "engine": {
    "name": "Fox",
    "version": "0.0.0",
    "author": "Jari Wilms",
    "description": "A C++ game engine",
    "build_date": "2025-XX-XX",
    "debug_mode": true
  },
  "window": {
    "title": "Fox Engine",
    "width": 1920,
    "height": 1080,
    "fullscreen": false,
    "vsync": false,
    "resizable": true,
    "antialiasing": {
      "enabled": false,
      "samples": 4
    }
  },
  "renderer": {
    "api": "OpenGL",
    "version": "4.6",
    "backend": "GLFW",
    "max_fps": 0,
    "shadow_quality": "high",
    "texture_filtering": "anisotropic",
    "anisotropy_level": 16,
    "culling": {
      "frustum_culling": true,
      "occlusion_culling": false,
      "backface_culling": true
    },
    "lighting": {
      "max_lights": 32,
      "max_shadow_casting_lights": 4,
      "shadow_mapping": true,
      "shadow_resolution": 2048
    }
  },
  "audio": {
    "enabled": true,
    "master_volume": 1.0,
    "music_volume": 0.8,
    "sfx_volume": 0.9,
    "max_audio_sources": 64,
    "audio_format": "WAV",
    "sample_rate": 44100,
    "buffer_size": 1024,
    "doppler_effect": true
  },
  "input": {
    "keyboard": {
      "enabled": true,
      "key_repeat": true,
      "repeat_delay": 250,
      "repeat_rate": 33
    },
    "mouse": {
      "enabled": true,
      "sensitivity": 1.0,
      "raw_input": false,
      "cursor_visible": true
    },
    "gamepad": {
      "enabled": true,
      "max_controllers": 4,
      "deadzone": 0.15,
      "vibration": true
    }
  },
  "assets": {
    "base_path": "./assets/",
    "textures_path": "textures/",
    "models_path": "models/",
    "audio_path": "audio/",
    "shaders_path": "shaders/",
    "fonts_path": "fonts/",
    "scripts_path": "scripts/",
    "cache_enabled": true,
    "max_cache_size": 512,
    "supported_formats": {
      "textures": [ "png", "jpg", "hdr" ],
      "models": [ "obj", "fbx", "gltf" ],
      "audio": [ "wav", "mp3", "ogg", "flac" ]
    }
  }
}
