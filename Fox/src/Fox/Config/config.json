  "assets": {
    "base_path": "./assets/",
    "textures_path": "textures/",
    "models_path": "models/",
    "audio_path": "audio/",
    "shaders_path": "shaders/",
    "fonts_path": "fonts/",
    "scripts_path": "scripts/",
    "cache_enabled": true,
    "max_cache_size": 512,
    "supported_formats": {
      "textures": [ "png", "jpg", "hdr" ],
      "models": [ "obj", "fbx", "gltf" ],
      "audio": [ "wav", "mp3", "ogg", "flac" ]
    }
  }
